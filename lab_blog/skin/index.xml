<?xml version="1.0" encoding="utf-8"?>
<skin>
	<information>
		<name>개발하는 캥거루</name>
		<version>1.2.1</version>
		<description><![CDATA[개발 블로그를 위한 심플한 스킨입니다.]]></description>
		<license>
			<![CDATA[ MIT License ]]>
		</license>
	</information>
	<author>
		<name>denev6</name>
		<homepage>https://dev-roo.tistory.com</homepage>
		<email>sungjin.code@gmail.com</email>
	</author>
    <variables>
		<variablegroup name="스킨 설정">
			<variable>
				<name>enableAutoTOC</name>
				<label>
					<![CDATA[본문 목차 생성]]>
				</label>
                <type>BOOL</type>
				<default>true</default>
				<description>
					<![CDATA[제목 아래 목차를 자동 생성합니다.]]>
				</description>
			</variable>
			<variable>
				<name>primaryColor</name>
				<label>
					<![CDATA[브랜드 컬러 선택]]>
				</label>
                <type>SELECT</type>
				<option><![CDATA[
					[
						{"name":"33, 71, 196", "label":"파랑", "value":"33, 71, 196"},
						{"name":"6, 95, 70", "label":"초록", "value":"6, 95, 70"},
						{"name":"118, 33, 192", "label":"보라", "value":"118, 33, 192"},
						{"name":"64, 87, 94", "label":"차가운 회색", "value":"64, 87, 94"}
					]
					]]>
				</option>
				<default>33, 71, 196</default>
				<description>
					<![CDATA[브랜드 컬러를 변경합니다.]]>
				</description>
			</variable>
			<variable>
				<name>disableComment</name>
				<label>
					<![CDATA[댓글창 숨김]]>
				</label>
				<type>BOOL</type>
				<default>false</default>
				<description>
					<![CDATA[댓글창을 설정 합니다.]]>
				</description>
			</variable>
			<variable>
				<name>devRooStyle</name>
				<label><![CDATA[캥거루 스킨 스타일 적용]]></label>
				<type>BOOL</type>
				<default>true</default>
				<description><![CDATA[캥거루 스킨의 편집 스타일을 적용합니다.]]></description>
			</variable>
        </variablegroup>
		<variablegroup name="개발자 설정">
			<variable>
				<name>codeTheme</name>
				<label>
					<![CDATA[코드 블록 테마]]>
				</label>
				<type>SELECT</type>
				<option><![CDATA[
					[
						{"name":"light", "label":"라이트 모드", "value":"light"},
						{"name":"dark", "label":"다크 모드", "value":"dark"}
					]
					]]>
				</option>
				<default>light</default>
				<description>
					<![CDATA[코드 블록 테마를 설정합니다.]]>
				</description>
			</variable>
			<variable>
				<name>enableMathjax</name>
				<label>
					<![CDATA[수식 표기]]>
				</label>
				<type>BOOL</type>
				<default>false</default>
				<description>
					<![CDATA[본문 영역에 있는 수식을 포맷팅합니다.]]>
				</description>
			</variable>
			<variable>
				<name>githubUserId</name>
				<label><![CDATA[Github 아이디]]></label>
				<type>STRING</type>
				<default>denev6</default>
				<description><![CDATA[프로필 영역 깃헙 아이디입니다.]]></description>
			</variable>
		</variablegroup>
		<variablegroup name="애드센스 설정">
			<variable>
				<name>adsenseClientId</name>
				<label>
					<![CDATA[애드센스 Client ID]]>
				</label>
				<description>
					<![CDATA[애드센스의 클라이언트ID를 입력합니다.]]>
				</description>
				<type>STRING</type>
				<default></default>
			</variable>
			<variable>
				<name>adsArticleTop</name>
				<label>
					<![CDATA[메인 상단 대형 광고]]>
				</label>
				<description>
					<![CDATA[광고 SLOT 코드를 입력합니다.]]>
				</description>
				<type>STRING</type>
				<default></default>
			</variable>
			<variable>
				<name>adsSideShort</name>
				<label>
					<![CDATA[사이드 광고(Short)]]>
				</label>
				<description>
					<![CDATA[광고 SLOT 코드를 입력합니다.]]>
				</description>
				<type>STRING</type>
				<default></default>
			</variable>
			<variable>
				<name>adsSideLong</name>
				<label>
					<![CDATA[사이드 광고(Long)]]>
				</label>
				<description>
					<![CDATA[광고 SLOT 코드를 입력합니다.]]>
				</description>
				<type>STRING</type>
				<default></default>
			</variable>
			<variable>
				<name>adsArticleBottom</name>
				<label>
					<![CDATA[본문 하단 광고]]>
				</label>
				<description>
					<![CDATA[광고 SLOT 코드를 입력합니다.]]>
				</description>
				<type>STRING</type>
				<default></default>
			</variable>
		</variablegroup>
    </variables>
	<default>
		<entriesOnPage>6</entriesOnPage>
		<entriesOnList>6</entriesOnList>
		<recentEntries>5</recentEntries>
		<recentComments>5</recentComments>
		<tagsInCloud>10</tagsInCloud> 
		<sortInCloud>2</sortInCloud>
		<lengthOfRecentNotice>50</lengthOfRecentNotice>
		<lengthOfRecentEntry>50</lengthOfRecentEntry>
		<lengthOfRecentComment>50</lengthOfRecentComment>
	</default>
</skin>
